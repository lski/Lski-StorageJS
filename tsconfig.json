{
	"compilerOptions": {
		"target": "esnext",
		"sourceMap": true,
		"skipLibCheck": false,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"noImplicitAny": true
	},
	"include": [
		"./src",
		"./index.d.ts"
	]
}